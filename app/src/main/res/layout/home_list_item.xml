<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="26dp"
    android:paddingBottom="26dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/bg_home"
        android:gravity="center"
        android:weightSum="3"
        android:elevation="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/homeList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/homeListMoneyImg"
                android:text="내잔고"
                android:layout_marginBottom="15dp"
                android:textColor="#343a40"
                android:textSize="12sp" />


                <ImageView
                    android:id="@+id/homeListMoneyImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/main_won" />

                <TextView
                    android:layout_toRightOf="@+id/homeListMoneyImg"
                    android:id="@+id/homeListMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:layout_centerVertical="true"
                    android:textColor="#343a40"
                    android:textSize="48sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/homeListDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="10sp"
            android:text="리셋까지 D-23"
            android:textColor="#868e96"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>